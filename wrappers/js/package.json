{
  "name": "ulcms",
  "version": "0.1.0",
  "description": "ULCMS: Rust core with WASM bindings",
  "license": "MIT",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "exports": {
    ".": {
      "node": {
        "import": "./lib/index.js",
        "require": "./lib/index.js"
      },
      "default": "./lib-esm/index.mjs",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib",
    "lib-esm",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && npx webpack && cp ../../artifacts/wasm/ulcms.wasm dist/ulcms.wasm",
    "check-types": "tsc --noEmit",
    "clean": "rimraf dist lib types",
    "eslint": "eslint src --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run check-types && npm run eslint && npm run prettier && npm run test-only",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "rimraf dist lib lib-esm types && npm run tsc-cjs && npm run tsc-esm && npm run copy-wasm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json && node -e \"require('fs').writeFileSync('lib/package.json','{\\n  \\\"type\\\": \\\"commonjs\\\"\\n}\\n')\"",
    "tsc-esm": "tsc --project tsconfig.esm.json",
    "copy-wasm": "cp ../../artifacts/wasm/ulcms.wasm lib/ulcms.wasm && cp ../../artifacts/wasm/ulcms.wasm lib-esm/ulcms.wasm"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/webpack": "^5.28.5",
    "cheminfo-build": "^1.2.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}